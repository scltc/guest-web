{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & deploy all",
            "type": "shell",
            "command": "gradle",
            "args": [
                "--console=rich",
//              "--info",
                "clean",
                "serverDeploy",
                "siteDeploy"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}